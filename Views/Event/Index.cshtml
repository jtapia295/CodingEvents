@{
}

<partial name="~/Views/Shared/_LinkedListPartial.cshtml" />
<h1>Coding Events</h1>


@if (ViewBag.Events.Count == 0)
{
    <p>No events yet!</p>
}

<table class="table">
    <tr>
        <th>ID</th>
        <th>Event</th>
        <th>Description</th>
    </tr>
    @foreach (var occurance in @ViewBag.Events)
    {
        <tr>
            <td>@occurance.Id</td>
            <td>@occurance.Name</td>
            <td>@occurance.Description</td>
        </tr>
    }
</table>

<h4>
    <a asp-controller="Event" asp-action="Add">Add Event</a>
</h4>
<p>
    <a asp-controller="Event" asp-action="Delete">Delete Event</a>
</p>
